                    <input required type="email" name="E-mail"><span></span>
                    <label>E-mail</label>
                </div>
                <div class="ContactContenedor">
                    <input required type="text" name="Asunto"><span></span>
                    <label>Asunto</label>
                </div>
                <div class="ContactContenedor">
                    <textarea required name="mensaje" rows="5"></textarea><span id="spantext"></span>
                    <label>Mensaje</label>
                </div>
                <div id="contenedorBotonContact">
                    <button type="submit">Enviar</button>
                </div>
            </form>
        </div>
